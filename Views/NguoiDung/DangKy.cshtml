@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
} <h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("DangKy", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="name">Họ và Tên:</label>
                @Html.TextBox("TenKH", null, new
                {
                    @class = "form-control",
                    @id =
                "name",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("TaiKhoan", null, new
                {
                    @class = "form-control",
                    @id =
                "dangnhap",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBox("Email", null, new
                {
                    @class = "form-control",
                    @id =
                "email",
                    type = "email",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="matkhau">Mật khẩu:</label>
                @Html.Password("MatKhau", null, new
                {
                    @class = "form-control",
                    @id =
                "matkhau",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="diachi">Địa chỉ:</label>
                @Html.TextBox("DiaChi", null, new
                {
                    @class = "form-control",
                    @id =
                "diachi"
                })
            </div>
            <div class="form-group">
                <label for="dienthoai">Điện thoại:</label>
                @Html.TextBox("SDT", null, new
                {
                    @class = "form-control",
                    @id =
                "dienthoai",
                    required = "required"
                })
            </div>
            <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
        }
    </div>
</div>