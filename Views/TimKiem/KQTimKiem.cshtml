@using WebFnB.Models;
@model IEnumerable<SP>
@{
    ViewBag.Title = "KQTimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @foreach (var sp in Model)
    {

        <div class="card col-sm-3 col-md-3 col-lg-4 d-flex align-items-stretch">
            <div class="img-container">
                <a href="@Url.Action("Details", "Product", new { id = sp.MaSP })">
                    <img class="card-img-top display-picture mt-2"
                         src="~/Images/@sp.Anh" alt="Card image">
                </a>
            </div>
            <div class="card-body">
                <strong class="card-title">@sp.TenSP</strong>
                <p class="card-text">@sp.GiaBan</p>
            </div>
        </div>
    }
</div>