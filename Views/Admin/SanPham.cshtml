@using WebFnB.Models
@using PagedList.Mvc
@model PagedList.PagedList<SP>
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm sản phẩm", "ThemSanPham")
</p>
<table class="table">
    <tr>
        <th>
            Mã Sản phẩm
            @*@Html.DisplayNameFor(model => model.First().MaSP)*@
        </th>
        <th>
            Tên Sản Phẩm
            @*@Html.DisplayNameFor(model => model.First().TenSP)*@
        </th>
        <th>
            Mô Tả
            @*@Html.DisplayNameFor(model => model.First().MoTa)*@
        </th>
        <th>
            Giá Bán
            @*@Html.DisplayNameFor(model => model.First().GiaBan)*@
        </th>
        <th>
            Giá Nhập
            @*@Html.DisplayNameFor(model => model.First().GiaNhap)*@
        </th>
        <th>
            Ảnh
            @*@Html.DisplayNameFor(model => model.First().Anh)*@
        </th>
        <th>
            Mã Loại Sản Phẩm
            @*@Html.DisplayNameFor(model => model.First().MaLoaiSP)*@
        </th>
        <th>
            Mã Nhà Sản Xuất
            @*@Html.DisplayNameFor(model => model.First().MaNCC)*@
        </th>
        <th>
            Tồn Kho
            @*@Html.DisplayNameFor(model => model.First().SoLuongTon)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaNhap)
            </td>
            <td>
                <img src="~/Images/@item.Anh" style="height:100px;width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSP.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NCungCap.MaNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td style="width: 150px;">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Chi tiết", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("SanPham", new { page }))
    </div>
    @*<div class="containterdropdown">
        <div class="dropdown">
            Results Per Page
        </div>
        @Html.DropDownList("pageSize", new SelectList(new List<int> { 5, 10, 20 }, Model.PageSize), new { onchange = "this.form.submit();" })
    </div>*@
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
</table>

